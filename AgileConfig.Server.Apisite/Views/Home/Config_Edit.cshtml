<ol class="breadcrumb">
    <li><a ui-sref="config.list">配置列表</a></li>
    <li><a>编辑</a></li>
</ol>

<form ng-submit="save()">
    <div class="text-danger">
        {{error_message}}
    </div>
    <div class="form-group">
        <label for="selectAppId">所属应用</label>
        <select ng-model="config.appId" id="selectAppId" class="form-control">
            <option ng-repeat="app in apps" value="{{app.id}}">
                {{app.name}}
            </option>
        </select>
    </div>
    <div class="form-group">
        <label for="inputKey">配置键</label>
        <input type="text" class="form-control" id="inputKey" placeholder="配置键（必填）"
               ng-model="config.key">
    </div>
    <div class="form-group">
        <label for="inputValue">值 </label>
        <input type="text" class="form-control" id="inputValue" placeholder="值 (必填)"
               ng-model="config.value">
    </div>
    <div class="form-group">
        <label for="inputGroup">配置组</label>
        <input type="text" class="form-control" id="inputGroup" placeholder="配置组"
               ng-model="config.group">
    </div>
    <div class="form-group">
        <label for="inputDescription">描述</label>
        <input type="text" class="form-control" id="inputDescription" placeholder="配置描述"
               ng-model="config.description">
    </div>
    <button type="submit" class="btn btn-primary">确定</button>
    <button type="button" class="btn btn-default" ng-click="cancel()">取消</button>
</form>
