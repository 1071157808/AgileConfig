<ol class="breadcrumb">
    <li><a ui-sref="apps.list">Apps</a></li>
    <li><a ui-sref="apps.add">Add</a></li>
</ol>

<form ng-submit="save()">
    <div class="text-danger">
        {{error_message}}
    </div>
    <div class="form-group">
        <label for="inputAppId">应用Id </label>
        <input type="text" class="form-control" id="inputAppId" placeholder="应用Id（必填）"
               ng-model="app.Id">
    </div>
    <div class="form-group">
        <label for="inputAppName">应用名称 </label>
        <input type="text" class="form-control" id="inputAppName" placeholder="应用名称 (必填)"
               ng-model="app.Name">
    </div>
    <div class="form-group">
        <label for="inputSecret">密钥</label>
        <input type="text" class="form-control" id="inputSecret" placeholder="密钥"
               ng-model="app.Secret">
    </div>
    <div class="form-group">
        <label>
            启用
            <input type="checkbox" class="form-control" ng-model="app.Enabled">
        </label>
    </div>
    <button type="submit" class="btn btn-primary">确定</button>
</form>
