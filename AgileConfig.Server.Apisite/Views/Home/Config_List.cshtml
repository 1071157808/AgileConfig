<div class="config">
    <ol class="breadcrumb">
        <li><a ui-sref="config.list">Configruations</a></li>
    </ol>
    <div class="add-bar">
        <div class="form-inline">
            所属应用：
            <select ng-model="selectedAppId" class="form-control">
                <option ng-repeat="app in apps" value="{{app.id}}">
                    {{app.name}}
                </option>
            </select>
            配置组：<input ng-model="filter_group" class="form-control"/>
            配置键：<input ng-model="filter_key" class="form-control"/>
            <button class="btn btn-success btn-sm" ng-click="search()">查询</button>
        </div>
        <div>
            <button class="btn btn-info btn-sm" ng-click="toAdd()">新建配置</button>
        </div>
    </div>
    <table class="table table-bordered table-hover config_list">
        <tr>
            <th class="col">配置键</th>
            <th class="col">值</th>
            <th class="col">配置组</th>
            <th class="table_col_desc">描述</th>
            <th class="col">创建时间</th>
            <th class="col">修改时间</th>
            <th class="col"></th>
        </tr>
        <tr ng-repeat="config in configs|filter:{status:1 }|filter:{appId: selectedAppId}">
            <td ng-bind="config.key"></td>
            <td ng-bind="config.value"></td>
            <td ng-bind="config.group"></td>
            <td ng-bind="config.description"></td>
            <td ng-bind="config.createTime|date:'yyyy-MM-dd HH:mm'"></td>
            <td ng-bind="config.updateTime|date:'yyyy-MM-dd HH:mm'"></td>
            <td>
                <button class="btn btn-primary btn-xs" ng-click="toEdit(config)">修改</button>
                <button class="btn btn-danger btn-xs" ng-click="deleteConfig(config)">删除</button>
            </td>
        </tr>
    </table>

</div>